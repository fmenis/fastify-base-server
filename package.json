{
  "name": "fastify-base-server",
  "version": "0.0.1",
  "description": "Fastify base server",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.13.x",
    "npm": ">=8.1.0"
  },
  "scripts": {
    "start": "npm run applyMigrations && nodemon --config nodemon.json --inspect -r dotenv/config index.js",
    "test": "npm run applyMigrations TEST_DB && tap --jobs=1 test/**/*.spec.js",
    "lint": "eslint . --ext .js",
    "prepare": "husky install",
    "initDb": "docker-compose up -d",
    "rebuildDb": "./scripts/rebuildDb.sh",
    "applyMigrations": "node -r dotenv/config ./scripts/applyMigrations.js"
  },
  "keywords": [
    "fastify"
  ],
  "author": "filippomeniswork@gmail.com",
  "repository": {
    "url": "https://github.com/fmenis/fastify-base-server"
  },
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/env": "^4.0.0",
    "@fastify/helmet": "^9.1.0",
    "@fastify/jwt": "^6.1.0",
    "@fastify/sensible": "^4.0.0",
    "@fastify/swagger": "^7.3.0",
    "close-with-grace": "^1.1.0",
    "dotenv": "^16.0.1",
    "fastify": "^4.0.3",
    "fastify-bcrypt": "^1.0.0",
    "fastify-plugin": "^3.0.1",
    "fluent-json-schema": "^3.1.0",
    "massive": "^6.10.2",
    "pg": "^8.7.3",
    "pino": "^8.0.0",
    "postgrator": "^7.1.0",
    "tap": "^16.3.0"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "self-cert": "^2.0.0"
  }
}
